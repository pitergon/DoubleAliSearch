{% extends "base.j2" %}

{% block title %} Register {% endblock %}
{% block sidebar %}{% endblock %}
{% block content %}
    <main class="container mx-auto px-4 pt-4 pb-7 flex flex-col space-y-4 flex-grow">

      <section class="bg-white flex flex-col shadow-lg rounded-lg py-2 flex-none">
        <h3 class="text-xl px-4 font-semibold text-red-600">Register</h3>
        <form action="/users/register" method="POST">
          <div class="flex flex-col md:flex-row mt-4 space-y-4 md:space-y-0 md:space-x-4">
            <div class="flex flex-col flex-grow px-4">
              <div class="flex flex-row mb-4">
                <label for="username"></label>
                <input
                  name="username"
                  type="text"
                  class="flex-grow border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
                  id="username"
                  placeholder="Username"
                  required
                />
              </div>
              <div class="flex flex-row mb-4">
                <label for="email"></label>
                <input
                  name="email"
                  type="text"
                  class="flex-grow border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
                  id="email"
                  placeholder="email"
                  required
                />
              </div>
              <div class="flex flex-row mb-4">
                <label for="password"></label>
                <input
                  type="password"
                  name="password"
                  class="flex-grow border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
                  id="password"
                  placeholder="Password"
                  required
                />
              </div>
              <div class="flex flex-row mb-4">
                <label for="confirm-password"></label>
                <input
                  type="password"
                  name="confirm_password"
                  class="flex-grow border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
                  id="confirm-password"
                  placeholder="Repeat password"
                  required
                />
              </div>
              <div class="flex flex-row mb-4">
                <button
                  type="submit"
                  class="bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-800 transition duration-300"
                >
                  Register
                </button>
              </div>
            </div>
          </div>
        </form>

      <section>
{% endblock %}

