{% extends "base.j2" %}

{% block title %} Login {% endblock %}

{% block content %}
<main class="flex flex-grow items-center justify-center">
  <section class="bg-white shadow-lg rounded-lg p-6 max-w-md w-full">
    <h3 class="text-xl font-semibold text-red-600 mb-4 text-center">Login</h3>
    <form action="/users/login" method="POST">
      <div class="space-y-4">
        <div>
          <label for="username" class="sr-only">Username</label>
          <input
            name="username"
            type="text"
            class="w-full border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
            id="username"
            placeholder="Username"
            required
          />
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="password"
            class="w-full border text-red-600 border-red-600 p-2 rounded-md focus:outline-none focus:border-yellow-500"
            id="password"
            placeholder="Password"
            required
          />
        </div>
        <div class="flex justify-between items-center">
          <button
            type="submit"
            class="bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-800 transition duration-300"
          >
            Login
          </button>
          <a href="/users/register" class="text-red-600 hover:text-red-800 font-bold text-lg">Register</a>
        </div>
      </div>
    </form>
  </section>
</main>
{% endblock %}

